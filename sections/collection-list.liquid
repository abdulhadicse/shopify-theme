      "label": "Place a heading text."
    },
    {
      "type": "textarea",
      "id": "collection_one_short_text",
      "default": "Collection Short Text",
      "label": "Place a short text."
    },
    {
      "type": "image_picker",
      "id": "collection_one_image",
      "label": "Place a image."
    },
    {
