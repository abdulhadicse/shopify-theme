<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }} <!-- Header hook for plugins -->

    {{ 'bootstrap.min.css' |  asset_url |  stylesheet_tag }}
    {{ 'font-awesome.min.css' |  asset_url |  stylesheet_tag }}
    {{ 'styles.css' |  asset_url |  stylesheet_tag }}
  </head>
  <body>

    {% section 'header'  %}
    {% section 'menu'  %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer'  %}

    <script src="{{ 'jquery-3.2.1.slim.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'popper.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'bootstrap.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'script.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
